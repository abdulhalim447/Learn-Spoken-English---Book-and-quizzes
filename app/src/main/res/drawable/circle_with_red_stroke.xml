<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the circle with a red stroke -->
    <item>
        <shape android:shape="oval">
            <!-- Set the size of the circle if needed. Example: 50dp x 50dp.
                 Remove or adjust if you want a different size. -->
            <size
                android:width="50dp"
                android:height="50dp" />

            <!-- Set the color of the circle to white -->
            <solid android:color="#FFFFFF" />

            <!-- Set the stroke (border) of the circle to red and define its width -->
            <stroke
                android:color="#FF0000"
                android:width="1dp" />
        </shape>
    </item>

</layer-list>
