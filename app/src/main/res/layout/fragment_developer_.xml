<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.developer_abdul_halim.spoken.Developer_Fragment">


    <LinearLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/bootom_corner_curved"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:visibility="visible">


        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/kalpurush"
            android:gravity="center"
            android:text="About Developer"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:cardCornerRadius="250dp"
                android:background="@drawable/two_color_curved"
                app:cardElevation="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/developer"
                    android:scaleType="centerCrop"
                    />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:weightSum="4"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"

                    >
                    <ImageButton
                        android:id="@+id/dev_facebook"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/facebook"
                        android:background="@color/white"
                        android:onClick="openFacebook"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kalpurush"
                        android:text="Facebook"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"

                    >
                    <ImageButton
                        android:id="@+id/dev_whatsApp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/whatsapp"
                        android:background="@color/white"
                        android:onClick="openWhatsApp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kalpurush"
                        android:text="Whats app"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"


                    >
                    <ImageButton
                        android:id="@+id/dev_Terlegram"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/telegram"
                        android:background="@color/white"
                        android:onClick="openTelegram"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kalpurush"
                        android:text="Telegram"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"

                    >
                    <ImageButton
                        android:id="@+id/dev_email"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/mail"
                        android:background="@color/white"
                        android:onClick="openEmail"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kalpurush"
                        android:text="Mail"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>


            </LinearLayout>


            <!--===============================================================================-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:background="#ffffff"
                app:cardElevation="10dp"
                android:layout_margin="10dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/About_Developer"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/kalpurush"
                    android:background="@drawable/two_color_curved"
                    >


                </TextView>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>







</LinearLayout>