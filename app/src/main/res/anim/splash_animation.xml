<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillAfter="true">

    <scale
        android:fromXScale="0"
        android:toXScale="1"
        android:fromYScale="0"
        android:toYScale="1"
        android:pivotX="0"
        android:pivotY="0" />

    <translate
        android:duration="1000"
        android:fromYDelta="-100%p"
        android:toYDelta="0"
        android:fromXDelta="-100%p"
        android:toXDelta="0" />

</set>
